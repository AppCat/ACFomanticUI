@page "/toast"

<FToast Colored="FColored.Blue" Style="display: block;">
    <FContent>
        <FHeader>Notice</FHeader>
        A Toast can be generated out of existing DOM Nodes
    </FContent>
</FToast>

<FButton OnClick="HandleOnClick" Content="显示" />

@code{
    [Inject]
    private ACFToastService _toastService { get; set; }

    public async Task HandleOnClick()
    {
        await _toastService.ShotAsync(new FToastSettings
        {
            Message = "Message",
            Class = "error"
        });
    }
}
